div(ng-controller='userReposController')
	.row
		.col-md-12
			h1 GitHub Users

	a(href='#/users/search') Back to search results
	hr
	.row
		.col-md-3
			h2 {{user.login}}
			img.avatar-lg(src='{{user.avatar_url}}')

		.col-md-9
			h2 Repositories
			.row(ng-repeat='repo in repos')
				dl
					dt name: 
					dd {{repo.name}}
					.clearfix 
					dt description: 
					dd {{repo.description}}
					.clearfix 
					dt url:
					dd 
						a(href='{{repo.html_url}}', target='_blank'){{repo.html_url}}
					.clearfix 




